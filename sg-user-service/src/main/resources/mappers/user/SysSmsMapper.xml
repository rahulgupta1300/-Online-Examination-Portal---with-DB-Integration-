<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.tangyi.exam.mapper.SysSmsMapper">
    <resultMap id="sysSmsResultMap" type="com.github.tangyi.api.exam.model.SysSms">
        <id column="id" property="id"/>
        <result column="receiver" property="receiver"/>
        <result column="content" property="content"/>
        <result column="response" property="response"/>
        <result column="creator" property="creator"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="operator" property="operator"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="is_deleted" property="isDeleted" jdbcType="BIT"/>
        <result column="tenant_code" property="tenantCode"/>
    </resultMap>

    <select id="findPage" resultMap="sysSmsResultMap">
        SELECT * FROM sys_sms WHERE is_deleted = 0
        <if test="params != null">
            <if test="params.tenantCode != null and params.tenantCode != ''">
                AND tenant_code = #{params.tenantCode}
            </if>
        </if>
        <choose>
            <when test="params.sortField != null and params.sortField != '' and params.sortOrder != null and params.sortOrder != ''">
                ORDER BY #{params.sortField} #{params.sortOrder}
            </when>
            <otherwise>
                ORDER BY update_time DESC
            </otherwise>
        </choose>
    </select>

    <select id="findList" resultMap="sysSmsResultMap">
        SELECT * FROM sys_sms a WHERE a.is_deleted = 0 AND a.tenant_code = #{tenantCode}
    </select>

    <select id="findListById" resultMap="sysSmsResultMap">
        SELECT * FROM sys_sms a WHERE a.id IN
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <delete id="delete">
        UPDATE sys_sms SET is_deleted = 1 WHERE id = #{id}
    </delete>

    <delete id="deleteAll">
        UPDATE sys_sms SET is_deleted = 1 WHERE id IN
        <foreach item="item" index="index" collection="ids" open="("
                 separator="," close=")">#{item}
        </foreach>
    </delete>
</mapper>
